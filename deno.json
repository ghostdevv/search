{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
	"version": "3.1.0",
	"tasks": {
		"dev": "deno run --allow-net --allow-env --allow-read --allow-run --watch src/main.ts",
		"start": "deno run --allow-net --allow-env --allow-read --allow-run src/main.ts",
		"compile": "deno compile --allow-net --allow-env --allow-read --allow-run --output search-linux-amd64 src/main.ts"
	},
	"fmt": {
		"singleQuote": true,
		"semiColons": true,
		"useTabs": true,
		"indentWidth": 4,
		"lineWidth": 100
	},
	"imports": {
		"@sauber/table": "jsr:@sauber/table@0.1.0",
		"ansi-regex": "npm:ansi-regex@^6.2.2",
		"citty": "npm:citty@^0.1.6",
		"dedent": "npm:dedent@^1.7.0"
	},
	"unstable": ["raw-imports"]
}
